<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, user-scalable=no">
		<link rel="stylesheet" type="text/css" href="css/siimple.min.css">
		<link rel="stylesheet" type="text/css" href="css/style.css">
		<link rel="shortcut icon" href="img/favicon.png">
		<title>Thermostat Control Center</title>
			
		<script>
			var init_form = function()
			{
				var ts = document.getElementById('servertime').innerHTML;
				ts = ts.split(/-->/).pop().trim();
				var date = new Date(parseInt(ts) * 1000);
				var hours = date.getHours();
				var minutes = "0" + date.getMinutes();
				var seconds = "0" + date.getSeconds();
				document.getElementById('servertime').innerHTML =
					hours + ':' + minutes.substr(-2) + ':' + seconds.substr(-2);
			}

			if (document.readyState === "complete" ||
				(document.readyState !== "loading" &&
				!document.documentElement.doScroll))
			{
			  init_form();
			} else {
			  document.addEventListener("DOMContentLoaded", init_form);
			}
			
		</script>
		
	</head>
	<body>
		
		<ul class="navbar">
			<li><a href="/">Home</a></li>
			<li><a class="active" href="log">Log</a></li>
		</ul>

		<div class="grid main">
			<h1>System time</h1>
			
			<table class="table table-striped">
				<tr>
					<td><b>Current time:</b></td>
					<td id="servertime"><!--#tstamp--></td>
				</tr>
			</table>


			<h1>Thermostat Log</h1>
			<table class="table table-striped">
				<tr>
					<td><!--#log1--></td>
				</tr>
				<tr>
					<td><!--#log2--></td>
				</tr>
				<tr>
					<td><!--#log3--></td>
				</tr>
				<tr>
					<td><!--#log4--></td>
				</tr>
				<tr>
					<td><!--#log5--></td>
				</tr>
				<tr>
					<td><!--#log6--></td>
				</tr>
				<tr>
					<td><!--#log7--></td>
				</tr>
				<tr>
					<td><!--#log8--></td>
				</tr>
				<tr>
					<td><!--#log9--></td>
				</tr>
				<tr>
					<td><!--#log10--></td>
				</tr>
			</table>

		</div>
	</body>
</html>
